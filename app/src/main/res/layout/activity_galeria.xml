<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title offset to avoid hamburger overlap (same 56dp as Perfil) -->
        <TextView
            android:id="@+id/tvTituloGaleria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Galería de Destinos"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginStart="56dp"
            android:paddingBottom="16dp" />

        <!-- 2-column grid of cards -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- París -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_paris"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:cardCornerRadius="12dp"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="París"
                        android:textStyle="bold"
                        android:textSize="28sp"
                        android:textColor="#FFFFFF"
                        android:background="#7A7A7A"/>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="París, Francia"
                    android:paddingTop="6dp"/>
            </LinearLayout>

            <!-- Kioto -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_kioto"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:cardCornerRadius="12dp"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Kioto"
                        android:textStyle="bold"
                        android:textSize="28sp"
                        android:textColor="#FFFFFF"
                        android:background="#7A7A7A"/>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kioto, Japón"
                    android:paddingTop="6dp"/>
            </LinearLayout>

            <!-- Machu pichu -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_machu"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:cardCornerRadius="12dp"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Machu Picchu"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="#FFFFFF"
                        android:background="#7A7A7A"/>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Machu Picchu, Perú"
                    android:paddingTop="6dp"/>
            </LinearLayout>

            <!-- Petra -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_petra"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:cardCornerRadius="12dp"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Petra"
                        android:textStyle="bold"
                        android:textSize="28sp"
                        android:textColor="#FFFFFF"
                        android:background="#7A7A7A"/>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Petra, Jordania"
                    android:paddingTop="6dp"/>
            </LinearLayout>

        </GridLayout>

    </LinearLayout>
</ScrollView>
