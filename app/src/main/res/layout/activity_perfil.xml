<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título con margen para no chocar con el botón hamburguesa -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestión de Perfil"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginStart="56dp"
            android:paddingBottom="16dp" />

        <!-- Foto circular centrada -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgPerfil"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:contentDescription="Foto de perfil"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/CircleImage"
            android:src="@drawable/perfil_demo" />
        <!-- Coloca un archivo en res/drawable llamado perfil_demo.jpg/png -->

        <!-- Nombre Completo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Completo"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pepito Perez"
            android:inputType="textPersonName" />

        <!-- Información Personal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Información Personal"
            android:textStyle="bold"
            android:paddingTop="16dp" />

        <EditText
            android:id="@+id/etInfoPersonal"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top|start"
            android:hint="Escribe una breve descripción..."
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:overScrollMode="always" />

        <!-- Estudios -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estudios"
            android:textStyle="bold"
            android:paddingTop="16dp" />

        <EditText
            android:id="@+id/etEstudios"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top|start"
            android:hint="Grado, universidad, cursos, certificaciones…"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:overScrollMode="always" />

        <!-- Experiencia -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experiencia"
            android:textStyle="bold"
            android:paddingTop="16dp" />

        <EditText
            android:id="@+id/etExperiencia"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top|start"
            android:hint="Puestos, proyectos, responsabilidades…"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:overScrollMode="always" />

        <!-- Destinos Visitados -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destinos Visitados"
            android:textStyle="bold"
            android:paddingTop="16dp" />

        <EditText
            android:id="@+id/etDestinos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="París, Roma, Kioto, Machu Picchu..."
            android:inputType="textMultiLine" />

        <!-- Preferencias de Viaje -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferencias de Viaje"
            android:textStyle="bold"
            android:paddingTop="16dp" />

        <EditText
            android:id="@+id/etPreferencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Aventura, cultura, gastronomía, naturaleza..."
            android:inputType="textMultiLine" />

    </LinearLayout>
</ScrollView>
