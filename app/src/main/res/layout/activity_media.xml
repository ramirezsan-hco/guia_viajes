<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title offset so it wonâ€™t collide with the hamburger -->
        <TextView
            android:id="@+id/tvTituloMedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reproductor Multimedia"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginStart="56dp"
            android:paddingBottom="16dp" />

        <!-- Video area -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="#111111">

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <!-- Controls bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="16dp">

            <ImageButton
                android:id="@+id/btnPrev"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="Anterior"
                android:src="@android:drawable/ic_media_previous" />

            <ImageButton
                android:id="@+id/btnPlayPause"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="Play/Pause"
                android:src="@android:drawable/ic_media_play"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/btnNext"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="Siguiente"
                android:src="@android:drawable/ic_media_next" />

            <ImageButton
                android:id="@+id/btnMute"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="Silencio"
                android:src="@android:drawable/ic_lock_silent_mode"
                android:layout_marginStart="12dp" />

            <SeekBar
                android:id="@+id/volumeSeek"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
